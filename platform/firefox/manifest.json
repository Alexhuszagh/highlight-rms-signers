{
  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png"
    },
    "default_title": "Highlight RMS Supporters"
  },

  "background": {
    "page": "background.html"
  },

  "manifest_version": 2,
  "name": "Highlight RMS Supporters",
  "version": "0.1",

  "description": "Highlights any users who signed RMS's letter.",

  "icons": {
    "24": "icons/icon_24.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png",
    "512": "icons/icon_512.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://*.github.io/*",
        "https://gitlab.com/*",
        "https://*.gitlab.io/*"
      ],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "https://github.com/*",
    "https://*.github.io/*",
    "https://gitlab.com/*",
    "https://*.gitlab.io/*",
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "web_accessible_resources": [
    "*.js"
  ]
}
